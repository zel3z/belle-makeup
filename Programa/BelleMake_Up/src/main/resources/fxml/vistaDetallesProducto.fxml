<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="445.0" prefWidth="718.0" style="-fx-background-color: white; -fx-padding: 20;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.mycompany.bellemake_up.controlador.VistaDetallesProductoController">
    
    <!-- Contenedor principal horizontal -->
    <HBox spacing="40">

        <!-- SECCIÓN IZQUIERDA -->
        <VBox spacing="20">

            <!-- Flechas izquierda / derecha -->
            <HBox spacing="270" />

            <!-- Imagen del producto -->
            <ImageView fx:id="imgProducto" fitHeight="370.0" fitWidth="300" style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);" />
        </VBox>

        <!-- SECCIÓN DERECHA -->
        <VBox prefHeight="340.0" prefWidth="308.0" spacing="10">

            <!-- Título -->
            <Label fx:id="lblNombre" style="-fx-font-size: 26px; -fx-font-weight: bold;" />

            <!-- Precio -->
            <Label fx:id="lblPrecio" style="-fx-font-size: 22px; -fx-text-fill: #C70039; -fx-font-weight: bold;" />

            <!-- Descripción -->
            <TextArea fx:id="txtDescripcion" editable="false" prefHeight="140" prefWidth="249.0" style="-fx-border-color: transparent; -fx-font-size: 14px;" wrapText="true" />
         <HBox prefHeight="28.0" prefWidth="308.0" />

            <HBox alignment="CENTER_LEFT" prefHeight="46.0" prefWidth="218.0" spacing="15">
                <Button fx:id="btnMenos" style="-fx-font-size: 22px; -fx-background-color: transparent;" text="‹" />

                <Label fx:id="lblCantidad" prefWidth="50.0" style="-fx-font-size: 18px; -fx-padding: 5 20;                                -fx-border-color: #DDDDDD;                                -fx-background-radius: 15; -fx-border-radius: 15;" text="1" />

                <Button fx:id="btnMas" style="-fx-font-size: 22px; -fx-background-color: transparent;" text="›" />

                <Button fx:id="btnFavoritos" prefHeight="40" prefWidth="158.0" style="-fx-background-color: DF0909; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-size: 14px;" text="Añadir a favoritos" />
            </HBox>

            <!-- BOTONES -->
            <HBox prefHeight="60.0" prefWidth="308.0" spacing="15" style="-fx-padding: 20 0 0 0;">

                <Button fx:id="btnComprar" prefHeight="40" prefWidth="161.0" style="-fx-background-color: DF0909; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-size: 14px;" text="Comprar ahora" />

                <Button fx:id="btnCarrito" prefHeight="40" prefWidth="149.0" style="-fx-background-color: DF0909; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-size: 14px;" text="Añadir al carrito" />
            </HBox>

        </VBox>

    </HBox>

</AnchorPane>
