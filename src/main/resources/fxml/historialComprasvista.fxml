<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="700.0" prefWidth="800.0" style="-fx-background: white; -fx-border-color: transparent;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.bellemake_up.controlador.HistorialComprasvistaController">
    
    <content>
        <VBox prefHeight="241.0" prefWidth="795.0" spacing="15" style="-fx-background-color: white; -fx-padding: 20;">
            
            <!-- Encabezado -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                
                <VBox spacing="2" />
            </HBox>
            
            <!-- Título -->
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Historial de Compras" />
            
            <!-- Contenedor de compras -->
            <VBox fx:id="contenedorCompras" spacing="15">
                <Label fx:id="lblSinCompras" text="No tienes compras realizadas" />
                <!-- Aquí se agregarán dinámicamente las compras -->
            </VBox>
            
            <!-- Botón volver -->
            <Button onAction="#volverAlCatalogo" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #df0909; -fx-background-radius: 5; -fx-text-fill: white;" text="Volver al Catálogo" />
        </VBox>
    </content>
</ScrollPane>
